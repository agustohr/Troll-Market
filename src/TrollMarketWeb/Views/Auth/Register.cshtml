@model AuthRegisterViewModel
@{
    Layout = "_LayoutAuth";
    ViewData["Title"] = "REGISTER ";
}

<div class="form_area">
    <h4 class="title">Register @Model.Role</h4>
    <form method="post" asp-action="Register">
        <div class="form_group">
            <label for="username" class="sub_title">Username</label>
            <input asp-for="@Model.Username" class="form_style" id="username" placeholder="Enter your username">
            <span asp-validation-for="@Model.Username"></span>
        </div>
        <div class="form_group">
            <label for="password" class="sub_title">Password</label>
            <input type="password" asp-for="@Model.Password" class="form_style" id="password" placeholder="Enter your password" />
            <span asp-validation-for="@Model.Password"></span>
        </div>
        <div class="form_group">
            <label for="confirm-password" class="sub_title">Confirm Password</label>
            <input type="password" asp-for="@Model.PasswordConfirm" class="form_style" id="confirm-password" placeholder="Enter your confirm password" />
            <span asp-validation-for="@Model.PasswordConfirm"></span>
        </div>
        <div class="form_group">
            <label for="name" class="sub_title">Name</label>
            <input asp-for="@Model.Name" class="form_style" id="name" placeholder="Enter your full name">
            <span asp-validation-for="@Model.Name"></span>
        </div>
        <div class="form_group">
            <label for="address" class="sub_title">Address</label>
            <textarea asp-for="@Model.Address" class="form_style" id="address" cols="38" rows="5" placeholder="Enter your address"></textarea>
            <span asp-validation-for="@Model.Address"></span>
        </div>
        <div class="form_foot">
            <button type="submit" class="btn">SIGN UP!</button>
            <p>Have an Account? <a asp-action="Login" class="link">Login Here!</a></p>
        </div>
    </form>
</div>

@if(ViewBag.Message != null){
    <div class="popup-alert-layer">
        <div class="popup-alert-dialog">
            <div>
                <h2>@ViewBag.Message</h2>
            </div>
            <div>
                <a asp-action="Index"><button class="btn">OK</button></a>
            </div>
        </div>
    </div>
}